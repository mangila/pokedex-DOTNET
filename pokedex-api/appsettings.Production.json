{
  "ConnectionStrings": {
    "Redis": "pokedex-redis:6379"
  },
  "MongoDbOption": {
    "ConnectionString": "mongodb://admin:password@pokedex-mongo:27017",
    "Database": "pokemon-db",
    "Collection": "pokemon",
    "Bucket": "pokemon-bucket"
  },
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.Grafana.Loki"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console"
      },
      {
        "Name": "GrafanaLoki",
        "Args": {
          "uri": "http://pokedex-loki:3100",
          "labels": [
            {
              "key": "app",
              "value": "pokedex-api"
            },
            {
              "key": "env",
              "value": "production"
            }
          ],
          "propertiesAsLabels": [
            "app",
            "env"
          ]
        }
      }
    ]
  }
}